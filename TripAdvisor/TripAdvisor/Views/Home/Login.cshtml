@{
    ViewData["Title"] = "LOGIN";
    @model System.Net.NetworkCredential;

}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <h1 class="display-4 mt-5">@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="text-danger">@ViewData["errore"]</div>
    <form asp-controller="Home" asp-action="Login" method="post">
        <div class="form-group row justify-content-center mx-auto">
            <input type="text" name="Username" class="form-control mb-2 search-input" id="Username" placeholder="Email" required/>
        </div>
        <div class="form-group row justify-content-center mx-auto">
            <input type="password" name="Password" class="form-control mb-2 search-input" id="Password" placeholder="Password" required/>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn mb-3 gap-2 col-3 mx-auto">ACCEDI</button>
        </div>
    </form>
    <a class="btn btn-top-right" asp-controller="Home" asp-action="Register">REGISTER NOW</a>
</div>


