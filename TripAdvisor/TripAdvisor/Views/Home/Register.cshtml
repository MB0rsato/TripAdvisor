@{
    ViewData["Title"] = "REGISTER";
    @model registrationUser;

}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <h1 class="display-4 mt-5">@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="text-danger">@ViewData["errore"]</div>
    <form asp-controller="Home" asp-action="Register" method="post">
        <div class="form-group row justify-content-center mx-auto">
            <input type="text" name="email" class="form-control mb-2 search-input" id="email" placeholder="Email" required />
        </div>
        <div class="form-group row justify-content-center mx-auto">
            <input type="text" name="name" class="form-control mb-2 search-input" id="name" placeholder="Name" required />
        </div>
        <div class="form-group row justify-content-center mx-auto">
            <select name="classid" class="form-control mb-2 search-input" id="classid" required>
                <option value="\" disabled selected>Scegli la classe</option>
                <option value="Class A">Class A</option>
                <option value="Class B">Class B</option>
                <option value="Class C">Class C</option>
            </select>
        </div>
        <div class="form-group row justify-content-center mx-auto">
            <input type="password" name="password" class="form-control mb-2 search-input" id="password" placeholder="Password" required />
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn mb-3 gap-2 col-3 mx-auto">REGISTER NOW</button>
        </div>
    </form>
</div>


