@{
    ViewData["Title"] = "Privacy Policy";
    DataManager manager = ViewData["manager"] as DataManager;
    Trip trip = ViewData["selectedTrip"] as Trip; 
    List<Comment> comments = ViewData["comments"] as List<Comment>;
    var utente = Context.Session.GetString("utente");
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <h1 class="display-4 mt-5">DETTAGLIO USCITA</h1>
        </div>
    </div>

    <!-- Dettagli del trip -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-8 col-sm-10">
            <div class="custom-box p-3 mb-3">
                <!-- dettagli del trip -->
                <div class="row">
                    <!-- Immagine -->
                    <div class="col-md-4 col-sm-6 text-center">
                        <img src="@trip.picture" class="img-fluid" alt="Trip picture" style="max-height: 200px;">
                    </div>

                    <!-- Descrizione e valutazione -->
                    <div class="col-md-8 col-sm-6">
                        <div class="d-flex flex-column align-items-start">
                            <h2>@trip.description</h2>
                            <div class="rating">
                                @for (int star = 5; star >= 1; star--)
                                {
                                    bool isChecked = (star == trip.averageRating);
                                    <input type="radio" id="star@star_@trip.id" name="rating_@trip.id" value="@star"
                                       @(isChecked ? "checked" : "") disabled />
                                    <label for="star@star_@trip.id" title="@star stelle"></label>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Informazioni sul trip -->
                <div class="row mt-4">
                    <div class="col-md-6">
                        <p>Data: @trip.date.ToString("dd MMMM yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <p>Location: @trip.location</p>
                    </div>

                    <div class="col-md-6">
                        <p>Durata: @trip.duration giorni</p>
                    </div>
                    <div class="col-md-6">
                        <p>Tipo: @trip.type</p>
                    </div>

                    <div class="col-md-6">
                        <p>Prezzo: @trip.price</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-8 col-sm-10">
            <h3>Commenti</h3>
            @if (comments != null && comments.Count > 0)
            {
                foreach (var comment in comments)
                {
                    <!-- Riquadro del commento -->
                    <div class="border p-3 mb-3 d-flex flex-column">
                        <!-- Stelle sopra il nome dell'autore -->
                        <div class="rating mb-2 text-center">
                            @for (int star = 5; star >= 1; star--)
                            {
                                bool isChecked = (star == comment.rating);
                                <input type="radio" id="star@star_@comment.id" name="rating_@comment.id" value="@star"/>
                                <label for="star@star_@comment.id" title="@star stelle"></label>
                            }
                        </div>

                        <!-- Nome dell'autore -->
                        <p><strong>@manager.GetUser(comment.authorid).name:</strong></p>

                        <!-- Testo del commento -->
                        <p>@comment.text</p>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-start">
                                <!-- Verifica se il commento è pending o approved -->
                                @if (comment.state == "pending")
                                {
                                    <!-- Mostra pulsanti "Accetta" e "Rifiuta" -->
                                    <button class="btn btn-success mr-2" onclick="location.href='@Url.Action("ApproveComment", "YourControllerName", new { id = comment.id })'">Accetta</button>
                                    <button class="btn btn-danger" onclick="location.href='@Url.Action("RefuseComment", "YourControllerName", new { id = comment.id })'">Rifiuta</button>
                                }
                                else if (comment.state == "approved")
                                {
                                    <!-- Mostra solo il pulsante "Elimina" -->
                                    <button class="btn btn-danger" onclick="location.href='@Url.Action("DeleteComment", "YourControllerName", new { id = comment.id })'">Elimina</button>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Nessun commento disponibile.</p>
            }
            </div>
        </div>
    </div>
</div>



